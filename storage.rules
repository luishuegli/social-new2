rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(
//    /databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin;
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to upload their own profile pictures
    match /profile-pictures/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to upload group profile pictures if they are group members
    match /groups/{groupId}/{allPaths=**} {
      allow read, write: if request.auth != null && 
        exists(/databases/(default)/documents/groups/$(groupId)/members/$(request.auth.uid));
    }
    
    // Allow users to upload post images
    match /posts/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow users to upload live post images
    match /live-posts/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
